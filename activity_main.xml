<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jogo da Velha"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonZero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonUm"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonDois"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonTres"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonQuatro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonCinco"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonSeis"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonSete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/buttonOito"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="buttonClick"
            android:background="@drawable/img_2"/>
    </LinearLayout>

    <Button
        android:textSize="20sp"
        android:id="@+id/buttonDez"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:onClick="buttonClick"
        android:background="@drawable/img_4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TROCAR MODO"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#A21F1F"/>

</LinearLayout>

